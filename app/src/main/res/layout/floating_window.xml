<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- 紧凑视图 (Dynamic Island 风格) -->
    <LinearLayout
        android:id="@+id/compactView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="visible">

        <!-- 状态指示器 -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_indicator" />

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UFO³"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 展开视图 -->
    <LinearLayout
        android:id="@+id/expandedView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- 标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- 状态指示器 -->
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_indicator" />

            <!-- 标题 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UFO³ GALAXY"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="monospace"
                android:textStyle="bold" />

            <!-- 关闭按钮 -->
            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginBottom="12dp" />

        <!-- 历史记录 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&gt; MESSAGE HISTORY"
            android:textColor="#888888"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp" />

        <ScrollView
            android:id="@+id/historyScrollView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/historyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:hint="对话历史将显示在这里..."
                android:textColorHint="#555555" />

        </ScrollView>

        <!-- 输入区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&gt; INPUT COMMAND"
            android:textColor="#888888"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#555555"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:hint="输入命令或问题..."
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:layout_marginBottom="8dp" />

        <!-- 按钮行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 语音按钮 -->
            <ImageButton
                android:id="@+id/voiceButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_btn_speak_now"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#FFFFFF"
                android:contentDescription="语音输入" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- 发送按钮 -->
            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="EXECUTE"
                android:textColor="#000000"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:background="@drawable/button_white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
